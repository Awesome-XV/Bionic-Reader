{
  "manifest_version": 3,
  "name": "Bionic Reader",
  "version": "1.1.0",
  "description": "Transform any webpage text into bionic reading format for faster, more efficient reading",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["content.js"],
      "css": ["bionic.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bionic Reader - Speed up your reading",
    "default_icon": {
      "16": "Bionic-Reader.png",
      "32": "Bionic-Reader.png",
      "48": "Bionic-Reader.png",
      "128": "Bionic-Reader.png"
    }
  },
  "icons": {
    "16": "Bionic-Reader.png",
    "32": "Bionic-Reader.png",
    "48": "Bionic-Reader.png",
    "128": "Bionic-Reader.png"
  },
  "commands": {
    "toggle-bionic": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Toggle Bionic Reader"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["bionic.css"],
      "matches": ["<all_urls>"]
    }
  ]
}